<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="org.wit.archaeologicalfieldwork">

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <application
    android:name=".main.MainApp"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme.Launcher"
    tools:ignore="GoogleAppIndexingWarning">
    <activity android:name=".activities.HomeActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".activities.hillfort.HillfortListActivity"/>
    <activity
      android:name=".activities.hillfort.HillfortActivity"
      android:parentActivityName=".activities.hillfort.HillfortListActivity" />
    <activity
      android:name=".activities.profile.ProfileActivity"
      android:parentActivityName=".activities.hillfort.HillfortListActivity" />
    <activity
      android:name=".activities.profile.UserActivity"
      android:parentActivityName=".activities.hillfort.HillfortListActivity" />
    <activity
      android:name=".activities.profile.ProfileSettingsActivity"
      android:parentActivityName=".activities.profile.ProfileActivity" />
    <activity
      android:name=".activities.hillfort.HillFortProfileActivity"
      android:parentActivityName=".activities.hillfort.HillfortListActivity" />

    <meta-data
      android:name="com.google.android.geo.API_KEY"
      android:value="@string/google_key" />

    <activity
      android:name=".activities.maps.MapsActivity"
      android:label="@string/title_activity_maps" />

  </application>

</manifest>